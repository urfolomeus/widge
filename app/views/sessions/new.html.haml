%h1.form-title Sign In

= form_tag sessions_path, class: 'form-horizontal', role: 'form' do
  .form-group
    .col-xs-12.col-sm-4
      = label_tag :email, nil, class: 'control-label'
    .col-xs-12.col-sm-8
      = email_field_tag :email, nil, class: 'form-control'
  .form-group
    .col-xs-12.col-sm-4
      = label_tag :password, nil, class: 'control-label'
    .col-xs-12.col-sm-8
      = password_field_tag :password, nil, class: 'form-control'
  .form-group
    .actions.col-xs-sm-12
      =# link_to "Forgot Password?", new_password_reset_path, class: "btn btn-default"
      = link_to "Cancel", root_path, class: "btn btn-default"
      = submit_tag "Sign In", class: "btn btn-primary"
