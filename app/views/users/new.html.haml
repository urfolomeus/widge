%h1.form-title Sign Up

= simple_form_for @user,
  wrapper: :horizontal_form,
  html: {class: 'form-horizontal', role: 'form'} do |form|

  = form.input :email, input_html: {class: 'form-control'}, label_html: {class: 'control-label'}
  = form.input :password, input_html: {class: 'form-control'}, label_html: {class: 'control-label'}
  = form.input :password_confirmation, input_html: {class: 'form-control'}, label_html: {class: 'control-label'}

  .form-group
    .actions
      = link_to 'Cancel', root_path, class: 'btn btn-default'
      = form.submit 'Sign Up', class: 'btn btn-primary'
